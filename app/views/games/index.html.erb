<%= render 'shared/header' %>
<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table class="table table-hover table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Functions</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.title, game %></span></td>
        <br>
        <td><%= link_to 'Edit', edit_game_path(game), class: "btn btn-default btn-xs"  %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a Game', new_game_path, class: "btn btn-default btn-xs"  %>
<%= render 'shared/donate' %>
